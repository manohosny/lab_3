{
	"info": {
		"_postman_id": "unique-id",
		"name": "Book Management API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response is an array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(Array.isArray(jsonData)).to.eql(true);",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"url": "{{baseUrl}}/books"
			}
		},
		{
			"name": "Create Book (Valid)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"pm.test(\"Book has correct properties\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.title).to.eql(\"Test Book\");",
							"    pm.expect(jsonData.author).to.eql(\"Test Author\");",
							"    pm.expect(jsonData.year).to.eql(2024);",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"url": "{{baseUrl}}/books",
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"Test Book\",\n    \"author\": \"Test Author\",\n    \"year\": 2024\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				}
			}
		},
		{
			"name": "Create Book (Invalid)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 400\", function () {",
							"    pm.response.to.have.status(400);",
							"});",
							"pm.test(\"Error message exists\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.error).to.exist;",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"url": "{{baseUrl}}/books",
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"Test Book\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				}
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://127.0.0.1:5000/api"
		}
	]
}